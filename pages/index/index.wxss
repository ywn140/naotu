.container {
  padding: 20rpx;
}

.input-section {
  width: 100%;
  margin-bottom: 30rpx;
}

.text-input {
  width: 100%;
  height: 300rpx;
  padding: 20rpx;
  box-sizing: border-box;
  border: 1px solid #ddd;
  border-radius: 8rpx;
  margin-bottom: 20rpx;
}

.divider {
  text-align: center;
  color: #999;
  margin: 20rpx 0;
}

.link-input {
  width: 100%;
  height: 80rpx;
  padding: 0 20rpx;
  box-sizing: border-box;
  border: 1px solid #ddd;
  border-radius: 8rpx;
}

.button-group {
  display: flex;
  justify-content: space-between;
  margin-top: 30rpx;
}

.generate-btn, .clear-btn {
  width: 45%;
}

.clear-btn {
  background: #f5f5f5;
}
